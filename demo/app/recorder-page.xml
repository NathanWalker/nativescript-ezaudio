<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
  <ActionBar title="EZRecorder Demo" backgroundColor="#000" color="#fff"/>
  <GridLayout rows="*,auto">
    <StackLayout row="0" class="main">
      <Button text="{{btnTxt}}" tap="{{toggleRecord}}"/>
    </StackLayout>
    <StackLayout row="1" class="black">
      <HtmlView html="{{footerNote}}" class="footer"/>
    </StackLayout>
  </GridLayout>
</Page>
