<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
  <ActionBar title="EZAudio Demo" backgroundColor="#000" color="#fff"/>
  <AbsoluteLayout height="100%" width="100%" class="main">
    <Placeholder creatingView="createAudioPlot" class="audioPlot"/>
    <Button text="{{btnTxt}}" tap="{{toggleCurrentTrack}}"/>
    <!--<ListPicker items="{{outputs}}" class="list-picker" selectedIndex="{{selectedOutput}}"
      verticalAlignment="center" horizontalAlignment="center"/>-->
    <!--<ListPicker items="{{plotColors}}" top="100" left="25" color="#000" backgroundColor="#fff" selectedIndex="0" height="40" width="100"/>-->
    <SegmentedBar items="{{plotColors}}" class="segment-control" top="100" left="74" selectedIndexChanged="{{changePlotColor}}" />
    <Label text="{{currentTime}}" top="375" left="25"/>
    <Label text="{{totalDuration}}" top="375" left="310"/>
    <Slider value="{{framePosition}}" minValue="0" maxValue="{{totalFrames}}" top="400" left="25"/>
    <SegmentedBar items="{{plotStyles}}" class="segment-control" top="440" left="25" selectedIndexChanged="{{changePlotType}}" />
    <Label text="Fill" top="480" left="25"/>
    <SegmentedBar items="{{plotFill}}" class="segment-control" top="505" left="25" selectedIndexChanged="{{changePlotFill}}" />
    <Label text="Mirror" top="480" left="120"/>
    <SegmentedBar items="{{plotFill}}" class="segment-control" top="505" left="120" selectedIndexChanged="{{changePlotMirror}}" />
    <HtmlView html="{{footerNote}}" class="footer" top="555" left="15"/>
  </AbsoluteLayout>
</Page>
